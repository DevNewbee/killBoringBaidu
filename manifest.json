{
  "name": "Hello Baidu",
  "description": "在百度首页上显示一些你想看的东西 比如小说",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "https://www.baidu.com/"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  },


  /**background scripts run in extensions*/
  "background" : {
    "scripts" : ["background.js"]

  },
  "browser_action": {
    "default_title": "在百度首页看小说",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "manifest_version": 2

}
